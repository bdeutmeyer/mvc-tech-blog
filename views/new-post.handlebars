<div class="new-post">
  <h2>
    Write a new post
  </h2>
  <form class="new-post-form">
    <label for="post-title">Post Title:</label>
    <br />
    <textarea id="post-title" name="post-title" rows="2" cols="30"></textarea>
    <br />
    <label for="post-content">Post content:</label>
    <br />
    <textarea id="post-content" name="post-content" rows="5" cols="30"></textarea>
    <br />
    <br />
    <button type="submit" value="Submit">
      Submit
    </button>
  </form>
</div>

<script src="js/addPost.js"></script>