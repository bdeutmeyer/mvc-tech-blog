<div class="new-post container-fluid">
  <h2>
    Edit post
  </h2>
  <hr>
  <form id="edit-post-form" class="bg-light p-2">
    <label for="post-title" class="p-1">Post Title:</label>
    <br />
    <textarea id="post-title" name="post-title" rows="2" cols="50" class="rounded p-2  ">{{post.title}}</textarea>
    <br />
    <label for="post-content" class="p-1">Post content:</label>
    <br />
    <textarea id="post-content" name="post-content" rows="10" cols="50" class="rounded p-2">{{post.content}}</textarea>
    <br />
    <br />
    <button type="submit" value="Submit" class="btn btn-primary m-1">
      Submit
    </button>
  </form>
</div>

<script src="/js/updatePostFetch.js"></script>