<div class="new-post">
  <h2>
    Edit post
  </h2>
  <form id="edit-post-form">
    <label for="post-title">Post Title:</label>
    <br />
    <textarea id="post-title" name="post-title" rows="2" cols="30">{{post.title}}</textarea>
    <br />
    <label for="post-content">Post content:</label>
    <br />
    <textarea id="post-content" name="post-content" rows="5" cols="30">{{post.content}}</textarea>
    <br />
    <br />
    <button type="submit" value="Submit">
      Submit
    </button>
  </form>
</div>

<script src="/js/updatePostFetch.js"></script>