<div id="update-form" data-state="hidden">
    {{#if data-state="hidden"}}
    <div>
        {{#each posts as |post|}}
        <div class="col-md-4 border border-black">
            <h3>
                {{post.title}}
            </h3>
            <p>
                {{post.content}}
            </p>
            <p class="">
                Author:
                {{post.user.username}}
            </p>
            <p>
                Posted on:
                {{ format_date post.createdAt}}
            </p>
            <button onclick="getPostForm()" data-id="{{post.id}}" id="update-post">Update post</button>
            <button data-id="{{post.id}}" id="delete-post">Delete post</button>
        </div>
        <div>
        </div>
        {{/each}}
    </div>
    {{else}}
    {{>edit-post}}
    {{/if}}
</div>


<script src="/public/js/getForm.js"></script>
<script src="/public/js/updateDeletePost.js"></script>